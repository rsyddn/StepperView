<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stepper_nav"
    app:startDestination="@id/firstStepFragment">

    <fragment
        android:id="@+id/firstStepFragment"
        android:name="com.example.stepperview.FirstStepFragment"
        android:label="fragment_first_step"
        tools:layout="@layout/fragment_first_step" >
        <action
            android:id="@+id/action_firstStepFragment_to_cameraActivity"
            app:destination="@id/cameraActivity" />
    </fragment>
    <fragment
        android:id="@+id/secondStepFragment"
        android:name="com.example.stepperview.SecondStepFragment"
        android:label="fragment_second_step"
        tools:layout="@layout/fragment_second_step" >
        <action
            android:id="@+id/action_secondStepFragment_to_cameraActivity"
            app:destination="@id/cameraActivity" />
    </fragment>
    <fragment
        android:id="@+id/thirdStepFragment"
        android:name="com.example.stepperview.ThirdStepFragment"
        android:label="fragment_third_step"
        tools:layout="@layout/fragment_third_step" />
    <activity
        android:id="@+id/cameraActivity"
        android:name="com.example.stepperview.CameraActivity"
        android:label="activity_camera"
        tools:layout="@layout/activity_camera" />
    <activity
        android:id="@+id/cameraResultActivity"
        android:name="com.example.stepperview.CameraResultActivity"
        android:label="activity_camera_result"
        tools:layout="@layout/activity_camera_result" />
</navigation>